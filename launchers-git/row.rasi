	font:				"Comfortaa 12";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    threads:                        0;
    scroll-method:                  0;
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
